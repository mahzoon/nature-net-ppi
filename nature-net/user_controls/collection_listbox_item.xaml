<UserControl x:Class="nature_net.user_controls.collection_listbox_item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:nature_net.user_controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <!--<DockPanel LastChildFill="False" Background="Transparent">
        <Image Name="img" DockPanel.Dock="Top" Margin="0,0,7,0"></Image>
        <DockPanel Name="drag_panel" DockPanel.Dock="Top" Background="Transparent">
            <TextBlock Name="percentage" Visibility="Collapsed" DockPanel.Dock="Bottom" TextWrapping="Wrap" HorizontalAlignment="Center"></TextBlock>
            <Image Name="drag" Height="13" DockPanel.Dock="Top"></Image>
        </DockPanel>
    </DockPanel>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Grid.RowSpan="3" x:Name="img" Margin="0,0,7,0"></Image>
        <DockPanel Grid.Row="1" Grid.RowSpan="2" Margin="0,0,7,10">
            <TextBlock Name="upload_failed_count" TextAlignment="Center" FontFamily="Calibri" FontSize="18" DockPanel.Dock="Top" ></TextBlock>
            <DockPanel Name="bottom_bar"  VerticalAlignment="Bottom" Background="#4A000000" DockPanel.Dock="Bottom" Height="35" Visibility="Hidden">
                <StackPanel VerticalAlignment="Center">
                <TextBlock Name="userinfo" Margin="5,0,0,0" FontFamily="Calibri" FontSize="10" Foreground="White">user</TextBlock>
                <TextBlock Name="dateinfo" Margin="5,0,0,0" FontFamily="Calibri" FontSize="10" Foreground="White">date</TextBlock>
                </StackPanel>
            </DockPanel>
        </DockPanel>
        <Border Name="drag_panel_border" Grid.Row="2" Margin="0,0,7,0">
            <DockPanel Name="drag_panel">
                <Image x:Name="drag" Height="13" DockPanel.Dock="Bottom" VerticalAlignment="Bottom"></Image>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
